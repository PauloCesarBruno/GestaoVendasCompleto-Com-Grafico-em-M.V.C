@model ClienteModel
@{ 
    Layout = null;
}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true"></span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Cadastro de Clientes</h4>
        </div>
        <div class="modal-body">   
            <form asp-controller="Cliente" asp-action="Cadastro">
                <input type="hidden" asp-for="Id" value="@try { @ViewBag.Cliente.Id } catch { }" />

                <div class="form-group">
                    <label>Nome</label>
                    <input asp-for="Nome" type="text" class="form-control" required value="@try { @ViewBag.Cliente.Nome } catch { }" />
                </div>

                <div class="form-group">
                    <label>CPF / CNPJ</label>
                    <input asp-for="CPF_CNPJ" type="text" class="form-control" required value="@try { @ViewBag.Cliente.CPF_CNPJ } catch { }" />
                </div>

                <div class="form-group">
                    <label>E-Mail</label>
                    <input asp-for="Email" type="text" class="form-control" required value="@try { @ViewBag.Cliente.Email } catch { }" />
                </div>

                <button type="submit" class="btn-success btn-sm"><i class="fa fa-user"></i> Registrar</button>
                <button style="margin-left: 3px;" type="button" class="btn  btn-info btn-sm" onclick="Voltar()"><i class="fa fa-step-backward"></i> Retornar para Listagem de Clientes</button>

            </form>
        </div>       
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script>
    function Voltar() {
        window.location.href = '../../Cliente/Index';
    }
</script>
