@model VendedorModel
@{ 
    Layout = null;
}

<script>
    function Voltar() {
        window.location.href = '../../Vendedor/Index';
    }
</script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true"></span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Cadastro de Vendedores</h4>
        </div>
        <div class="modal-body">
            

            <form asp-controller="Vendedor" asp-action="Cadastro">
                <input type="hidden" asp-for="Id" value="@try { @ViewBag.Vendedor.Id } catch { }" />

                <div class="form-group">
                    <label>Nome</label>
                    <input asp-for="Nome" type="text" class="form-control" required value="@try { @ViewBag.Vendedor.Nome } catch { }" />
                </div>


                <div class="form-group">
                    <label>E-Mail</label>
                    <input asp-for="Email" type="text" class="form-control" required value="@try { @ViewBag.Vendedor.Email } catch { }" />
                </div>

                <button type="submit" class="btn-success btn-sm"><i class="fa fa-user"></i> Registrar</button>
                <button style="margin-left: 3px;" type="button" class="btn  btn-info btn-sm" onclick="Voltar()"><i class="fa fa-step-backward"></i> Retornar para Listagem de Vendedores</button>

            </form>


        </div>        
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->